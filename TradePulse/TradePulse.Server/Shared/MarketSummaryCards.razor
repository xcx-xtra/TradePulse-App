        }
        
        .secondary-value {
            padding: var(--spacing-xs) var(--spacing-sm);
        }
        
        .secondary-label,
        .secondary-text {
            font-size: var(--font-size-xs);
        }
        
        .sparkline-container {
            height: 16px;
            margin-top: var(--spacing-sm);
        }
    }

    /* Small mobile devices */
    @@media (max-width: 480px) {
        .market-summary-grid {
            gap: var(--spacing-sm);
        }
        
        .summary-card {
            padding: var(--spacing-sm);
            margin: 0;
        }
        
        .card-header {
            gap: var(--spacing-sm);
            margin-bottom: var(--spacing-xs);
        }
        
        .card-icon {
            width: 40px;
            height: 40px;
            font-size: 1.1rem;
        }
        
        .card-title {
            font-size: var(--font-size-sm);
        }
        
        .card-subtitle {
